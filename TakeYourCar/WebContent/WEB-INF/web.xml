<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>TakeYourCar</display-name>
  <welcome-file-list>
    <welcome-file>login.jsp</welcome-file>
  </welcome-file-list>
  
  <!-- DICHIARO LE SERVLET -->
  <servlet>
  	<servlet-name>Servlet</servlet-name>
  	<servlet-class>control.Servlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>Servlet</servlet-name>
  	<url-pattern>/Servlet</url-pattern>
  </servlet-mapping>
  
  <!-- DICHIARO I FILTRI -->
  <filter>
  	<filter-name>LoginFilter</filter-name>
  	<filter-class>filtri.LoginFilter</filter-class>
  </filter>
  <filter-mapping>
  	<filter-name>LoginFilter</filter-name>
  	<url-pattern>/Servlet/*</url-pattern>
  	<url-pattern>/admin/*</url-pattern>
  	<url-pattern>/user/*</url-pattern>
  	<url-pattern>/home.jsp</url-pattern>
  </filter-mapping>
  
  <filter>
  	<filter-name>AdminFilter</filter-name>
  	<filter-class>filtri.AdminFilter</filter-class>
  </filter>
  <filter-mapping>
  	<filter-name>AdminFilter</filter-name>
  	<url-pattern>/admin/*</url-pattern>
  </filter-mapping>
  
  <!-- DICHIARO LE PAGINE DI ERRORE -->
  <error-page>
  	<error-code>404</error-code>
  	<location>/error/404.jsp</location>
  </error-page>
  
  <!-- DICHIARO LE VARIABILI GLOBALI -->
  <context-param>
  	<param-name>URL</param-name>
  	<param-value>/TakeYourCar/</param-value>
  </context-param>
  <context-param>
  	<param-name>KEY</param-name>
  	<param-value>TakeYourCarKey12345</param-value>
  </context-param>
</web-app>